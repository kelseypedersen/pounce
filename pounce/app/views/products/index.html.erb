<!-- This is where the user will end up after searching for a particular items. Products is an array of product objects -->
<main class="main">
	<h2><%= @products.count %></h2><span>search results for "something"</span>
	<div class="js-masonry"  data-masonry-options='{
	        "itemSelector": ".item",
	        "transitionDuration": "0.1s"
	     }'>
		<% @products.each do |product| %>
		<a href="/products/<%= product["id"] %>">
			<div class="card fl-l item">
				<div class="card-img">
					<img src="<%= product['image']['sizes']['XLarge']['url'] %>" >
				</div>
				<div class="card-content">
					<p class="p-name"><%= product["name"] %></p>
					<p class="p-price"><%= product["priceLabel"] %></p>
				</div>
			</div>
		<!-- <p><%= product %></p> -->
		</a>
		<% end %>
	</div>
</main>
